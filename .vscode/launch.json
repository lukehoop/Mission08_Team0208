{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch with IIS Express (browser opens)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Mission08_Team0208/bin/Debug/net10.0/Mission08_Team0208.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Mission08_Team0208",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7013;http://localhost:5017"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Launch without debugging (IIS Express-style)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Mission08_Team0208/bin/Debug/net10.0/Mission08_Team0208.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Mission08_Team0208",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7013;http://localhost:5017"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "https://localhost:7013",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
